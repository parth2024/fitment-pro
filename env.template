# Azure AI Foundry Configuration
# Copy this file to .env and fill in your actual values

# Your Azure AI Foundry API Key (from Azure portal)
AZURE_OPENAI_API_KEY=your_api_key_here

# Your Azure AI Foundry Endpoint URL
AZURE_OPENAI_ENDPOINT=https://your-project-name.openai.azure.com/

# API Version (usually 2024-02-15-preview or 2024-06-01)
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Your deployed model name (e.g., gpt-4, gpt-35-turbo)
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name_here

# Django Configuration
SECRET_KEY=dev-secret
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# Database Configuration (if using PostgreSQL)
POSTGRES_DB=your_db_name
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
